<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <changeSet author="joao.ciribelli" id="cria-colunas-numericas-analises-pf">
        <addColumn tableName="analise" >
            <column name="pf_total_adjust_num"
                    type="numeric(12,2)"/>
            <column name="pf_total_num"
                    type="numeric(12,2)"/>
            <column name="pf_total_aprovado_num"
                    type="numeric(12,2)"/>
            <column name="pf_total_original_num"
                    type="numeric(12,2)"/>
        </addColumn>
    </changeSet>

    <changeSet author="joao.ciribelli" id="update-colunas-numericas-analises-pf">
        <update tableName="analise" >
            <column name="pf_total_adjust_num"
                    valueComputed="pf_total_adjust::numeric"/>
            <column name="pf_total_num"
                    valueComputed="pf_total::numeric"/>
            <column name="pf_total_aprovado_num"
                    valueComputed="pf_total_aprovado::numeric"/>
            <column name="pf_total_original_num"
                    valueComputed="pf_total_original::numeric"/>
        </update>
    </changeSet>

    <changeSet author="joao.ciribelli" id="apagar-colunas-varchar-analises-pf">
        <dropColumn tableName="analise">
            <column name="pf_total_adjust"/>
            <column name="pf_total"/>
            <column name="pf_total_aprovado"/>
            <column name="pf_total_original"/>
        </dropColumn>
    </changeSet>

    <changeSet author="joao.ciribelli" id="renomear-colunas-numericas-analises-pf">
        <renameColumn
            newColumnName="pf_total_adjust"
            oldColumnName="pf_total_adjust_num"
            tableName="analise"/>
        <renameColumn
            newColumnName="pf_total"
            oldColumnName="pf_total_num"
            tableName="analise"/>
        <renameColumn
            newColumnName="pf_total_aprovado"
            oldColumnName="pf_total_aprovado_num"
            tableName="analise"/>
        <renameColumn
            newColumnName="pf_total_original"
            oldColumnName="pf_total_original_num"
            tableName="analise"/>
    </changeSet>
</databaseChangeLog>
